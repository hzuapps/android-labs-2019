<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg_main"
        android:gravity="center_horizontal"
        android:layout_height="match_parent">
    
    <com.jl.shudu.view.TitleView
            android:id="@+id/tv_shudu_title"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="数独"/>
    
    <com.jl.shudu.view.ShuDuView
            android:id="@+id/nv_01"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:layout_margin="20dp"
            app:outlineBorderColor="#fff"
            app:inlineBorderColor="#fff"
            app:choseIndexColor="@color/shudu_chose_index_color"
            app:errorIndexColor="@color/shudu_error_index_color"
            app:textColor="#fff"
            app:promptBackgroundColor="@color/shudu_prompt_background_color"/>
    
        <LinearLayout
                android:visibility="visible"
                android:id="@+id/linear_number"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">
            
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btn_1"
                        style="@style/number_button"
                        android:text="@string/number_1"/>
                <Button
                        android:id="@+id/btn_2"
                        style="@style/number_button"
                        android:text="@string/number_2"/>
                <Button
                        android:id="@+id/btn_3"
                        style="@style/number_button"
                        android:text="@string/number_3"/>
                <Button
                        android:id="@+id/btn_finish"
                        style="@style/number_button"
                        android:text="完成"/>
                
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btn_4"
                        style="@style/number_button"
                        android:text="@string/number_4"/>
                <Button
                        android:id="@+id/btn_5"
                        style="@style/number_button"
                        android:text="@string/number_5"/>
                <Button
                        android:id="@+id/btn_6"
                        style="@style/number_button"
                        android:text="@string/number_6"/>
                <Button
                        android:id="@+id/btn_next"
                        style="@style/number_button"
                        android:text="下一题"/>
            </LinearLayout>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <Button
                        android:id="@+id/btn_7"
                        style="@style/number_button"
                        android:text="@string/number_7"/>
                <Button
                        android:id="@+id/btn_8"
                        style="@style/number_button"
                        android:text="@string/number_8"/>
                <Button
                        android:id="@+id/btn_9"
                        style="@style/number_button"
                        android:text="@string/number_9"/>
                <Button
                        android:id="@+id/btn_0"
                        style="@style/number_button"
                        android:text="@string/number_0"/>
            </LinearLayout>
            
        </LinearLayout>

</LinearLayout>